<!DOCTYPE html>
<html lang="en">
	<head>
		<style>

			body {
				font-family: Arial, sans-serif;
				margin: 0;
				padding: 0;
				background-color: #f6f9ff;
			}

			.card-body {
				background-color: white !important;
			}

			.card-body {
				padding: 20px;
			}

			h3, h5 {
				margin-bottom: 15px;
			}



			.card {
				text-align: center;
			}

			.card-body {
				padding: 20px;
			}

			.form-group {
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: 15px;
			}

			input {
				padding: 10px;
				margin-right: 10px;
			}

		</style>
	</head>

	<body>

		<div class="card">
			<div class="card-body">
				<h1 class="card-title">What do you want to learn?</h1>
				<h6 class="card-title">Grow your skills with the most reliable online courses and certifications.</h6>
				<form method="post" asp-area="" asp-controller="" asp-action="">
					<div class="form-group">
						<input type="text" id="courseCategory" name="courseCategory" placeholder="Search Course Category" class="form-control" required>
						<input type="submit" value="Search" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>

		<div class="row mb-4">
			<div class="col-lg-8 mx-auto text-center">
				<h2 style="color: black;"><strong>Choose a Categories</strong></h2>
				<p class="mb-0">Perceived end knowledge certainly day sweetness why cordially</p>
			</div>
		</div>

		<div class="row g-4 mb-4">

			<br />

			@if (Model.Count > 0)
			{
				foreach (var coursecategory in Model)
				{
					<div class="col-md-6 col-xxl-3">
						<div class="card card-body bg-warning bg-opacity-15 p-4">
							<div class="icon-xl bg-body mx-auto rounded-circle mb-3">
								<img src="" alt="Logo">
							</div>
							<h5 class="mb-2"><a href="#" class="stretched-link">@coursecategory.CourseCategory</a></h5>
							<h6 class="mb-0">[0 Courses]</h6>
						</div>
					</div>
				}
			}
			else
			{
				<div class="card">
					<div class="card-body">
						<h1 class="card-title">No Records Found!</h1>
					</div>
				</div>
			}

		</div>

	</body>

</html>





